
public class TestaCondicional2 {
	public static void main(String[] args) {
		System.out.println("Testando condicionais");
		int idade = 18;
		int pessoas = 2;
		//boolean acompanhado = pessoas >= 2;
		boolean acompanhado;
		if (pessoas >= 2) {
			// O escopo da variável, ela nasce quando abre a chave e morre quando fecha
			acompanhado = true;
		}else {
				acompanhado = false;
			}
		
		System.out.println("Valor de acompanhado é: " + acompanhado);
		
		if (idade >= 18 && acompanhado){
			System.out.println("Pode entrar! Você tem mais de 18 ou está acompanhado.");
		}
		else{
			System.out.println("Você não tem mais de 18 anos ou não está acompanhado,"
							   + "então fuck off!");
			}
	}

}
